<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.thm.ap.groupexpenses">

    <application
        android:name="de.thm.ap.groupexpenses.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".view.EventActivity"
            android:label="@string/app_name"
            android:theme="@style/ThemeOverlay.MyNoTitleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.EventFormActivity" />
        <activity
            android:name=".view.PositionActivity"
            android:label="@string/title_activity_position" />
        <activity android:name=".view.PositionFormActivity" />
        <activity
            android:name=".view.FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true" />
        <activity android:name=".view.LoginActivity"
                android:theme="@style/ThemeOverlay.MyNoTitleActivity"/>
    </application>

</manifest>