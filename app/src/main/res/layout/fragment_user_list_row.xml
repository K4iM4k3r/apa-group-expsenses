<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content">

<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_user_list_row_name"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Test Name"
    android:textAlignment="center"
    android:textColor="#3a90e0"
    android:textSize="20sp"
    >
</TextView>

<ImageView
    android:id="@+id/fragment_user_list_row_image_tick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/app_margin"
    android:background="@drawable/ic_check_black_24dp"
    android:layout_alignParentRight="true"
    android:visibility="gone"
    />

<ImageView
    android:id="@+id/fragment_user_list_row_image_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginEnd="@dimen/app_margin"
    android:background="@drawable/ic_remove_circle_red_24dp"
    android:layout_alignParentRight="true"
    android:visibility="gone"
    />

</RelativeLayout>







